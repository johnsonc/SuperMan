(defun org-pro-superman ()
  "Returns a super project for project management"
  `("SuperManager"
    (("location" . ,org-pro-default-directory)
     ("index" . ,org-pro-file)
     ("category" . "Super")
     ("state" . "ACTIVE")
     ("config" . "INDEX | AGENDA / TODO"))))

(provide 'org-pro-superman)
